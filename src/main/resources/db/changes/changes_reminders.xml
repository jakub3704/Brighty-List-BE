<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="JK" id="1">

        <createTable tableName="reminders">
            <column name="reminderId" autoIncrement="true"
                type="BIGINT">
                <constraints primaryKey="true"
                    nullable="false" 
                    foreignKeyName="fk_task_id"/>
            </column>
            <column name="taskId" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="message" type="VARCHAR(255)" />
            <column name="cron" type="VARCHAR(500)" />
        </createTable>
        
            <addForeignKeyConstraint
                baseColumnNames="taskId" 
                baseTableName="reminders" 
                constraintName="fk_task_id"
                onDelete="CASCADE" 
                onUpdate="CASCADE"
                referencedColumnNames="taskId"
                referencedTableName="tasks" />

        <rollback>
            <dropTable tableName="reminders" />
        </rollback>

    </changeSet>

</databaseChangeLog>